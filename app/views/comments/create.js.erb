<% if @comment.errors.present? %>
  <% @comment.errors.full_messages.each do |msg| %>
    $('#comment-errors').html('<%= j msg %>');
  <% end %>
<% else %>
  <% publish_to "/#{@comment.commentable_type.downcase}/#{@commentable.id}/comments" do %>
    $('#<%= "#{@comment.commentable_type.downcase}-#{@commentable.id}-comments" %>').html('<%= j render @commentable.comments %>');
  <% end %>
  $('#comment-form').remove();
<% end %>