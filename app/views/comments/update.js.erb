<% if @comment.errors.present? %>
  <% @comment.errors.full_messages.each do |msg| %>
    $('#comment-errors').html('<%= j msg %>');
  <% end %>
<% else %>
  $('#<%= "#{@comment.commentable_type.downcase}-#{@comment.commentable.id}-comments" %>').html('<%= j render @comment.commentable.comments %>');
  $('#comment-form').remove();
<% end %>